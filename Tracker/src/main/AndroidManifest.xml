<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.isageek.tyderion.habittracker" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".habit.HabitListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".habit.HabitDetailActivity"
            android:label="@string/title_habit_detail"
            android:parentActivityName=".habit.HabitListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.isageek.tyderion.habittracker.HabitListActivity" />
        </activity>
    </application>

</manifest>
