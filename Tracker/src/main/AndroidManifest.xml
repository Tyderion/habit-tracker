<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.isageek.tyderion.habittracker" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Holo" >

        <activity android:name=".settings.SettingsActivity"
            android:parentActivityName=".item.ItemListActivity"
            android:label="@string/settings" >
        </activity>
        <activity
            android:name=".item.ItemListActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ch.isageek.tyderion.habittracker.database.DataExportActivity"
            android:label="@string/title_activity_data_export"
            android:parentActivityName="ch.isageek.tyderion.habittracker.item.ItemListActivity" >
        </activity>
        <activity
            android:name="ch.isageek.tyderion.habittracker.occurrence.OccurrenceListActivity"
            android:label="@string/title_activity_occurrence_list"
            android:theme="@style/Theme.Flying">
        </activity>
        <activity
            android:name="ch.isageek.tyderion.habittracker.occurrence.QuickAddOccurrenceActivity"
            android:theme="@style/Theme.Transparent" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/ch.isageek.tyderion.habittracker.occurrence.add" />
            </intent-filter>
        </activity>

        <activity
            android:name=".item.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".item.ItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.isageek.tyderion.habittracker.ItemListActivity" />


        </activity>
        <activity
            android:name="ch.isageek.tyderion.habittracker.item.AddItemActivity"
            android:label="@string/title_activity_edit_habit"
            android:parentActivityName="ch.isageek.tyderion.habittracker.item.ItemListActivity"
            android:theme="@style/Theme.Flying" >
        </activity>
        <activity android:name="com.dropbox.sync.android.DbxAuthActivity" />
        <activity
            android:name="com.dropbox.client2.android.AuthActivity"
            android:launchMode="singleTask" >
            <intent-filter>
                <data android:scheme="db-46phyj7lzjwosim" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <service
            android:name="com.dropbox.sync.android.DbxSyncService"
            android:enabled="true"
            android:exported="false"
            android:label="Dropbox Sync" />


    </application>

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

</manifest>
