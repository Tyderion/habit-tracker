<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.isageek.tyderion.habittracker" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ch.isageek.tyderion.habittracker.habit.HabitListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ch.isageek.tyderion.habittracker.habit.HabitDetailActivity"
            android:label="@string/title_habit_detail"
            android:launchMode="singleTop"
            android:parentActivityName="ch.isageek.tyderion.habittracker.habit.HabitListActivity" >
        </activity>
        <activity
            android:name="ch.isageek.tyderion.habittracker.habit.EditHabitActivity"
            android:label="@string/title_activity_edit_habit"
            android:parentActivityName="ch.isageek.tyderion.habittracker.habit.HabitListActivity" >
        </activity>
        <activity
            android:name="ch.isageek.tyderion.habittracker.occurrence.OccurrenceListActivity"
            android:label="@string/title_activity_occurrence_list"
            android:parentActivityName="ch.isageek.tyderion.habittracker.habit.HabitDetailActivity" >
        </activity>
        <activity
            android:name="ch.isageek.tyderion.habittracker.occurrence.QuickAddOccurrenceActivity"
            android:label="@string/title_activity_quick_add_occurrence" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/ch.isageek.tyderion.habittracker.occurrence.add" />
            </intent-filter>
        </activity>
        <activity
            android:name="ch.isageek.tyderion.habittracker.database.DataExportActivity"
            android:label="@string/title_activity_data_export" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.NFC" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

</manifest>
