<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ch.isageek.tyderion.habittracker.item.ItemDetailFragment" >

    <TextView
        android:id="@+id/item_detail"
        style="?android:attr/textAppearanceLarge"
        android:text="@string/placholder"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textIsSelectable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="27dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/placholder"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:id="@+id/item_detail_description"
        android:layout_gravity="left|top"
        android:layout_below="@+id/item_detail"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/item_detail_occurences_title"
        android:id="@+id/item_detail_occurrences_title"
        android:layout_below="@+id/item_detail_description"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/item_detail_occurrences_total"
        android:layout_alignTop="@+id/item_detail_occurrences_title"
        android:layout_toRightOf="@+id/item_detail_occurrences_title"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_detail_show_occurrences_list"
        android:id="@+id/item_detail_open_occurrences_list"
        android:layout_below="@+id/item_detail_occurrences_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />


</RelativeLayout>