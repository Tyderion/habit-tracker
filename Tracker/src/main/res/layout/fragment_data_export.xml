<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/data_export_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.isageek.tyderion.habittracker.database.DataExportFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backup_file_picker_title_string"
        android:id="@+id/backup_pick_file_button"
        android:onClick="pick"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backup_export_button_title"
        android:id="@+id/backup_export_button"
        android:onClick="exportData"
        android:layout_alignTop="@+id/backup_import_button"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backup_import_button_title"
        android:id="@+id/backup_import_button"
        android:onClick="importData"
        android:layout_below="@+id/backup_pick_file_button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp" />
</RelativeLayout>
